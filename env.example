# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000

# Tesseract OCR Configuration
TESSERACT_CMD=/usr/local/bin/tesseract

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff

# Folder paths
PO_FOLDER_PATH=/path/to/purchase_orders
INVOICE_FOLDER_PATH=/path/to/invoices
PROCESSED_FOLDER_PATH=/path/to/processed

# Processing settings
SCAN_INTERVAL_SECONDS=30
ENABLE_FOLDER_WATCHING=true

# Database Configuration
DATABASE_URL=postgresql://prat_user:password@localhost:5432/prat
# Or use individual components:
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=prat
# DATABASE_USER=prat_user
# DATABASE_PASSWORD=your_password_here

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Debug Mode
DEBUG=false 